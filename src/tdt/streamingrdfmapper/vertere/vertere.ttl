# The Vertere Ontology
# First built by Rob Styles inspired by the Kasabi Vertere project
# Starting 2012 it was extended by Miel Vander Sande
# In 2013 it was formalized in this file by Pieter Colpaert for the DataTank project

@prefix oldvertere: <http://example.com/schema/data_conversion#> .
@prefix vertere: <http://vocab.mmlab.be/vertere/terms#>

@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# vertere:Spec

vertere:Spec rdfs:label "A Vertere mapping specification" ;
             rdfs:comment "A Vertere specification specifies how a chunk of data in an associative array structure can be mapped to RDF resources and attributes." ;
             owl:sameAs oldvertere:Spec ;
             a rdfs:Class .

# - Properties of vertere:Spec

vertere:base_uri rdfs:label "A base URI" ;
                 rdfs:comment "A base URI is added to every relative URI used" ;
                 owl:sameAs oldvertere:base_uri ;
                 a rdf:Property ;
                 rdfs:domain vertere:Spec ;
                 rdfs:range xsd:string .

vertere:null_values rdfs:label "NULL values" ;
                    rdfs:comment "A list of strings that represent a NULL value in the datasource" ;
                    owl:sameAs oldvertere:null_values ;
                    a rdf:Property ;
                    rdfs:domain vertere:Spec ;
                    rdf:range rdf:List .

## vertere:Spec → vertere:Resource

vertere:Resource rdfs:label "Resource definition" ;
                 rdfs:comment "A Vertere resource is a definition of a thing that can be identified using a source column value from the chunk of data given." ;
                 owl:sameAs oldvertere:Resource ;
                 a rdfs:Class .

## - Properties of vertere:Resource

vertere:type rdfs:label "Type" ;
             rdfs:comment "Type that needs to be given to the resulting resource created" ;
             owl:sameAs oldvertere:type ;
             a rdf:Property ;
             rdfs:domain vertere:Resource ;
             rdf:range rdf:Class .

vertere:attribute rdfs:label "Link to an Attribute of a Resource" ;
                  rdfs:comment "Links an attribute to a resource (In Vertere, this is mostly fixed using a blank node)" ;
                  owl:sameAs oldvertere:attribute ;
                  a rdf:Property ;
                  rdfs:domain vertere:Resource ;
                  rdf:range vertere:Attribute .

### vertere:Spec → vertere:Resource → vertere:Attribute

vertere:Attribute rdfs:label "Attribute of a Resource" ;
                  rdfs:comment "An attribute of a resource distilled from one or more source columns" ;
                  owl:sameAs oldvertere:Attribute ;
                  a rdfs:Class .

### - Properties of vertere:Attribute

vertere:property rdfs:label "Property class";
                 rdfs:comment "The class of the property to map towards. This is for instance rdfs:label.";
                 a rdf:Property ;
                 rdfs:domain vertere:Attribute .

vertere:language rdfs:label "Language of the attribute" ;
                 rdfs:comment "The language of the attribute" ;
                 a rdf:Property ;
                 rdfs:domain vertere:Attribute ;
                 rdf:range xsd:string .

vertere:datatype rdfs:label "Datatype";
                 rdfs:comment "The data type of the object. This can be for instance an xsd:string";
                 a rdf:Property ;
                 rdfs:domain vertere:Attribute .
                
vertere:value rdfs:label "A fixed value";
              rdfs:comment "A fixed value which can be used to indicate an extra column. E.g. you can use this to add information about units used in another column.";
              a rdf:Property ;
              rdfs:domain vertere:Attribute .

vertere:source_column rdfs:label "The source column";
                      rdfs:comment "The source column key name to be used for this attribute";
                      a rdf:Property ;
                      rdfs:domain vertere:Attribute ;
                      rdf:range <> .

vertere:source_columns rdfs:label "";
                 rdfs:comment "";
                 a rdf:Property ;
                 rdfs:domain vertere:Attribute ;
                 rdf:range <> .

vertere:lookup rdfs:label "";
                 rdfs:comment "";
                 a rdf:Property ;
                 rdfs:domain vertere:Attribute ;
                 rdf:range <> .

vertere:source_column_glue rdfs:label "";
                 rdfs:comment "";
                 a rdf:Property ;
                 rdfs:domain vertere:Attribute ;
                 rdf:range <> .

vertere:source_column_filter rdfs:label "";
                             rdfs:comment "";
                 a rdf:Property ;
                 rdfs:domain vertere:Attribute ;
                 rdf:range <> .

vertere:property a rdf:Property .

### vertere:Spec → vertere:Resource → vertere:Relationship

vertere:Relationship rdfs:label "" ;
                     rdfs:comment "";
                     a rdfs:Class .

### - Properties of vertere:Relationship

vertere:property rdfs:label "Property class";
                 rdfs:comment "The class of the property to map towards, or the class of the relationship. This is for instance rdfs:label or owl:sameAs.";
                 rdfs:domain vertere:Relationship , vertere:Attribute .

vertere:object_from rdfs:label "";
                 rdfs:comment "";
                 a rdf:Property ;
                 rdfs:domain vertere:Relationship ;
                 rdf:range <> .

vertere:identity rdfs:label "";
                 rdfs:comment "";
                 a rdf:Property ;
                 rdfs:domain vertere:Relationship ;
                 rdf:range <> .

vertere:object rdfs:label "";
                 rdfs:comment "";
                 a rdf:Property ;
                 rdfs:domain vertere:Relationship ;
                 rdf:range <> .

vertere:subject rdfs:label "";
                 rdfs:comment "";
                 a rdf:Property ;
                 rdfs:domain vertere:Relationship ;
                 rdf:range <> .

